	trace("parentDiv.formscrollbartype :: ", parentDiv.formscrollbartype)
	var divId = "divManager" + rowpos;
	
	var divWidth = 192;
	var divHeight = 24;
	
	var divManager = new Div(divId, 0+(rowpos * (divWidth+2)), 5, divWidth, null, null, 5); 
