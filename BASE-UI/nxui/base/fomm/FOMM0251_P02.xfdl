				}
				
			}
			break;
			
		case "U" :
			this.divBottom.form.btnSave.set_visible(true);
			this.divContent.form.divSearchArea.form.rdoCreType.readonly = true;
			this.dsCond.setColumn(this.dsCond.rowposition, 'POST_MT_NO', this.pPostMtNo);  
			
